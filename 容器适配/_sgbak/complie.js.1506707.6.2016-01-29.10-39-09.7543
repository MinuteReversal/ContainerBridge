var fs = require('fs');
var UglifyJS = require("C:\\Windows\\System32\\node_modules\\uglify-js");


// 批量读取文件，压缩之
function buildOne(fileIn, fileOut) {
    var result = UglifyJS.minify(fileIn);
    fs.writeFileSync(fileOut, result.code, 'utf8');
}

//批量的话写多个一起执行即可
